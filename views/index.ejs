<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Video App</title>
    <style>
* {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        @keyframes gradientShift {
            0%, 100% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
        }
        
        @keyframes borderGlow {
            0%, 100% {
                opacity: 0.6;
            }
            50% {
                opacity: 1;
            }
        }
        
        @keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-10px);
            }
        }
        
        @keyframes shimmer {
            0% {
                background-position: -1000px 0;
            }
            100% {
                background-position: 1000px 0;
            }
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #000000;
            background-image: 
                radial-gradient(at 20% 30%, rgba(30, 30, 30, 0.3) 0px, transparent 50%),
                radial-gradient(at 80% 70%, rgba(20, 20, 20, 0.3) 0px, transparent 50%);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            color: #ffffff;
            overflow: hidden;
        }
        
        #videoDiv {
            display: grid;
            grid-gap: 24px;
            padding: 32px;
            max-width: 95%;
            height: 85%;
            background: rgba(10, 10, 10, 0.8);
            backdrop-filter: blur(20px);
            border-radius: 30px;
            box-shadow:
                0 20px 60px rgba(0, 0, 0, 0.5),
                0 0 0 1px rgba(255, 255, 255, 0.05),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            grid-auto-rows: 320px;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: #27272a transparent;
            position: relative;
            border: 1px solid rgba(255, 255, 255, 0.08);
        }
        
        #videoDiv::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(
                45deg,
                rgba(60, 60, 60, 0.4),
                rgba(40, 40, 40, 0.2),
                rgba(60, 60, 60, 0.4),
                rgba(40, 40, 40, 0.2)
            );
            background-size: 400% 400%;
            border-radius: 30px;
            z-index: -1;
            animation: gradientShift 6s ease infinite;
        }
        
        #videoDiv::-webkit-scrollbar {
            width: 8px;
        }
        
        #videoDiv::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.02);
            border-radius: 10px;
        }
        
        #videoDiv::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, #3a3a3a, #27272a);
            border-radius: 10px;
            border: 2px solid rgba(0, 0, 0, 0.5);
        }
        
        #videoDiv::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(180deg, #4a4a4a, #37373a);
        }
        
        .video-container {
            position: relative;
            border-radius: 20px;
            overflow: hidden;
        }
        
        .video-container::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(
                135deg,
                rgba(80, 80, 80, 0.6),
                rgba(50, 50, 50, 0.3),
                rgba(80, 80, 80, 0.6)
            );
            background-size: 200% 200%;
            border-radius: 20px;
            z-index: -1;
            animation: gradientShift 4s ease infinite;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .video-container:hover::before {
            animation: gradientShift 4s ease infinite, borderGlow 2s ease-in-out infinite;
            opacity: 1;
        }
        
        video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 16px;
            box-shadow:
                0 10px 30px rgba(0, 0, 0, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.05),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(60, 60, 60, 0.5);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
        }
        
        video:hover {
            transform: scale(1.03) translateY(-4px);
            box-shadow:
                0 20px 50px rgba(0, 0, 0, 0.6),
                0 0 0 1px rgba(255, 255, 255, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.15);
            border-color: rgba(100, 100, 100, 0.8);
        }
        
        #footer {
            margin-top: 40px;
            width: 100%;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
            height: 70px;
            background: rgba(10, 10, 10, 0.95);
            backdrop-filter: blur(20px);
            display: flex;
            justify-content: center;
            align-items: center;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
            position: fixed;
            bottom: 0;
            left: 0;
            box-shadow: 
                0 -8px 32px rgba(0, 0, 0, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
            gap: 20px;
        }
        
        #footer::before {
            content: '';
            position: absolute;
            top: -1px;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(
                90deg,
                transparent,
                rgba(255, 255, 255, 0.15),
                transparent
            );
        }
        
        button {
            height: 50px;
            padding: 0 32px;
            border: none;
            color: #ffffff;
            font-weight: 600;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            letter-spacing: 0.5px;
            border-radius: 12px;
            text-transform: uppercase;
            font-size: 0.85rem;
        }
        
        button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                90deg,
                transparent,
                rgba(255, 255, 255, 0.1),
                transparent
            );
            transition: left 0.5s ease;
        }
        
        button:hover::before {
            left: 100%;
        }
        
        .share-btn {
            background: linear-gradient(135deg, #1a1a1a, #0a0a0a);
            border: 2px solid rgba(80, 80, 80, 0.4);
            box-shadow: 
                0 4px 15px rgba(0, 0, 0, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
        }
        
        .share-btn::after {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(
                135deg,
                rgba(100, 100, 100, 0.3),
                rgba(60, 60, 60, 0.1),
                rgba(100, 100, 100, 0.3)
            );
            background-size: 200% 200%;
            border-radius: 12px;
            z-index: -1;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .share-btn:hover {
            background: linear-gradient(135deg, #2a2a2a, #1a1a1a);
            border-color: rgba(120, 120, 120, 0.6);
            transform: translateY(-2px);
            box-shadow: 
                0 6px 20px rgba(0, 0, 0, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
        }
        
        .share-btn:hover::after {
            opacity: 1;
            animation: gradientShift 3s ease infinite;
        }
        
        .leave-btn {
            background: linear-gradient(135deg, #1a1a1a, #0a0a0a);
            border: 2px solid rgba(100, 60, 60, 0.4);
            box-shadow: 
                0 4px 15px rgba(0, 0, 0, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
        }
        
        .leave-btn::after {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(
                135deg,
                rgba(150, 70, 70, 0.3),
                rgba(100, 40, 40, 0.1),
                rgba(150, 70, 70, 0.3)
            );
            background-size: 200% 200%;
            border-radius: 12px;
            z-index: -1;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .leave-btn:hover {
            background: linear-gradient(135deg, #2a1a1a, #1a0a0a);
            border-color: rgba(150, 80, 80, 0.6);
            transform: translateY(-2px);
            box-shadow: 
                0 6px 20px rgba(100, 0, 0, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
        }
        
        .leave-btn:hover::after {
            opacity: 1;
            animation: gradientShift 3s ease infinite;
        }
        
        button:active {
            transform: scale(0.96) translateY(0);
        }
     
    </style>
    <script type="text/javascript">
      var roomID = "<%= RoomId %>";

      function shareRoomLink() {
        const link = window.location.href;
        navigator.clipboard.writeText(link).then(() => {
          alert("Room link copied to clipboard!");
        }).catch(err => {
          console.error("Failed to copy: ", err);
        });
      }

   
function leaveRoom() {
  window.open("about:blank", "_self");
  window.close();
}

    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/index.js" defer></script>
  </head>
  <body>
    <div id="videoDiv"></div>
    <div id="footer">
      <button class="share-btn" onclick="shareRoomLink()">Share Link</button>
      <button class="leave-btn" onclick="leaveRoom()">Leave Room</button>
    </div>
  </body>
</html>


