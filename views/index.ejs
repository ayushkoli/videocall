<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Video App</title>
    <style>
      /* Reset and global styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      @keyframes gradientShift {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      @keyframes floatingParticles {
        0%, 100% {
          transform: translateY(0) translateX(0);
          opacity: 0.3;
        }
        50% {
          transform: translateY(-20px) translateX(10px);
          opacity: 0.6;
        }
      }

      @keyframes pulse {
        0%, 100% {
          opacity: 0.4;
        }
        50% {
          opacity: 0.8;
        }
      }

      @keyframes slideUp {
        from {
          transform: translateY(100px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      @keyframes shimmer {
        0% {
          background-position: -1000px 0;
        }
        100% {
          background-position: 1000px 0;
        }
      }

      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(-45deg, #000000, #0a0a0a, #050505, #0d0d0d);
        background-size: 400% 400%;
        animation: gradientShift 15s ease infinite;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        color: #ffffff;
        position: relative;
        overflow: hidden;
      }

      /* Animated particles background */
      body::before {
        content: '';
        position: absolute;
        width: 200%;
        height: 200%;
        background-image: 
          radial-gradient(2px 2px at 20% 30%, rgba(255, 255, 255, 0.15), transparent),
          radial-gradient(2px 2px at 60% 70%, rgba(100, 150, 255, 0.2), transparent),
          radial-gradient(1px 1px at 50% 50%, rgba(255, 255, 255, 0.1), transparent),
          radial-gradient(2px 2px at 80% 10%, rgba(150, 100, 255, 0.15), transparent);
        background-size: 200px 200px, 300px 300px, 150px 150px, 250px 250px;
        background-position: 0 0, 40px 60px, 130px 270px, 70px 100px;
        animation: floatingParticles 20s linear infinite;
        pointer-events: none;
      }

      /* Glowing orbs */
      body::after {
        content: '';
        position: absolute;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(100, 150, 255, 0.1) 0%, transparent 70%);
        border-radius: 50%;
        top: -250px;
        right: -250px;
        animation: pulse 8s ease-in-out infinite;
        pointer-events: none;
      }

      #videoDiv {
        display: grid;
        grid-gap: 24px;
        padding: 32px;
        max-width: 95%;
        height: 85%;
        background: rgba(10, 10, 10, 0.6);
        backdrop-filter: blur(30px) saturate(180%);
        border-radius: 30px;
        box-shadow: 
          0 8px 32px rgba(0, 0, 0, 0.8),
          0 0 0 1px rgba(255, 255, 255, 0.05) inset,
          0 30px 90px rgba(0, 0, 0, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.08);
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        grid-auto-rows: 320px;
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: rgba(100, 150, 255, 0.6) rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 1;
        animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
      }

      /* Shine effect on container */
      #videoDiv::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.03),
          transparent
        );
        animation: shimmer 3s infinite;
      }

      #videoDiv::-webkit-scrollbar {
        width: 10px;
      }

      #videoDiv::-webkit-scrollbar-thumb {
        background: linear-gradient(180deg, rgba(100, 150, 255, 0.8), rgba(150, 100, 255, 0.8));
        border-radius: 20px;
        border: 2px solid rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
      }

      #videoDiv::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(180deg, rgba(120, 170, 255, 1), rgba(170, 120, 255, 1));
      }

      #videoDiv::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.4);
        border-radius: 20px;
        margin: 10px 0;
      }

      #footer {
        margin-top: 40px;
        width: 100%;
        border-top-left-radius: 25px;
        border-top-right-radius: 25px;
        height: 70px;
        background: rgba(5, 5, 5, 0.95);
        backdrop-filter: blur(30px) saturate(180%);
        display: flex;
        justify-content: center;
        align-items: center;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        position: fixed;
        bottom: 0;
        left: 0;
        box-shadow: 
          0 -8px 32px rgba(0, 0, 0, 0.6),
          0 0 0 1px rgba(255, 255, 255, 0.05) inset;
        gap: 20px;
        z-index: 10;
        animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
      }

      button {
        height: 50px;
        padding: 0 32px;
        border: none;
        color: #ffffff;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        letter-spacing: 0.5px;
        border-radius: 25px;
        text-transform: uppercase;
        font-size: 0.85rem;
      }

      /* Shimmer effect on buttons */
      button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.3),
          transparent
        );
        transition: left 0.5s ease;
      }

      button:hover::before {
        left: 100%;
      }

      /* Glow effect */
      button::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 25px;
        padding: 2px;
        background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        opacity: 0;
        transition: opacity 0.4s ease;
      }

      button:hover::after {
        opacity: 1;
      }

      /* Share button */
      .share-btn {
        background: #000000;
        border: 2px solid transparent;
        background-clip: padding-box;
        position: relative;
        box-shadow: 
          0 4px 15px rgba(102, 126, 234, 0.4),
          0 0 20px rgba(118, 75, 162, 0.3),
          inset 0 0 20px rgba(102, 126, 234, 0.1);
      }

      .share-btn::before {
        content: '';
        position: absolute;
        inset: -2px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 25px;
        z-index: -1;
      }

      .share-btn:hover {
        transform: translateY(-3px) scale(1.05);
        box-shadow: 
          0 8px 30px rgba(102, 126, 234, 0.6),
          0 0 40px rgba(118, 75, 162, 0.5),
          inset 0 0 30px rgba(102, 126, 234, 0.2);
        background: rgba(102, 126, 234, 0.1);
      }

      .share-btn:active {
        transform: translateY(-1px) scale(1.02);
      }

      /* Leave button */
      .leave-btn {
        background: #000000;
        border: 2px solid transparent;
        background-clip: padding-box;
        position: relative;
        box-shadow: 
          0 4px 15px rgba(255, 65, 108, 0.4),
          0 0 20px rgba(255, 75, 43, 0.3),
          inset 0 0 20px rgba(255, 65, 108, 0.1);
      }

      .leave-btn::before {
        content: '';
        position: absolute;
        inset: -2px;
        background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
        border-radius: 25px;
        z-index: -1;
      }

      .leave-btn:hover {
        transform: translateY(-3px) scale(1.05);
        box-shadow: 
          0 8px 30px rgba(255, 65, 108, 0.6),
          0 0 40px rgba(255, 75, 43, 0.5),
          inset 0 0 30px rgba(255, 65, 108, 0.2);
        background: rgba(255, 65, 108, 0.1);
      }

      .leave-btn:active {
        transform: translateY(-1px) scale(1.02);
      }

      video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 20px;
        box-shadow: 
          0 10px 40px rgba(0, 0, 0, 0.6),
          0 0 0 1px rgba(255, 255, 255, 0.1) inset;
        border: 2px solid rgba(255, 255, 255, 0.05);
        transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
        background: #000000;
        position: relative;
      }

      video:hover {
        transform: scale(1.05) translateY(-5px);
        box-shadow: 
          0 20px 60px rgba(0, 0, 0, 0.8),
          0 0 30px rgba(100, 150, 255, 0.3),
          0 0 0 2px rgba(100, 150, 255, 0.5) inset;
        border-color: rgba(100, 150, 255, 0.6);
        filter: brightness(1.1);
      }

      /* Video container glow effect */
      #videoDiv > * {
        animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) backwards;
      }

      #videoDiv > *:nth-child(1) { animation-delay: 0.1s; }
      #videoDiv > *:nth-child(2) { animation-delay: 0.2s; }
      #videoDiv > *:nth-child(3) { animation-delay: 0.3s; }
      #videoDiv > *:nth-child(4) { animation-delay: 0.4s; }
      #videoDiv > *:nth-child(5) { animation-delay: 0.5s; }
      #videoDiv > *:nth-child(6) { animation-delay: 0.6s; }
    </style>
    <script type="text/javascript">
      var roomID = "<%= RoomId %>";

      function shareRoomLink() {
        const link = window.location.href;
        navigator.clipboard.writeText(link).then(() => {
          alert("Room link copied to clipboard!");
        }).catch(err => {
          console.error("Failed to copy: ", err);
        });
      }

   
function leaveRoom() {
  window.open("about:blank", "_self");
  window.close();
}

    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/index.js" defer></script>
  </head>
  <body>
    <div id="videoDiv"></div>
    <div id="footer">
      <button class="share-btn" onclick="shareRoomLink()">Share Link</button>
      <button class="leave-btn" onclick="leaveRoom()">Leave Room</button>
    </div>
  </body>
</html>
